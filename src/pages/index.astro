---
import Layout from '../layouts/Layout.astro';
import projects from '../data/projects.json';

const featuredProjects = projects.filter((p) => p.featured).slice(0, 3);
const pageTitle = "Home — Fingerless Coder — Portfolio of Code & Design";
const pageDescription =
  "Full-stack developer and multimedia student building interactive web applications, creative tools and user-centered designs. Explore projects in music tech, tourism portals, and modern web experiences.";
---

<Layout title={pageTitle} description={pageDescription} canonical="https://fingerlesscoder.github.io/" currentPage="/">
  <section class="relative overflow-hidden min-h-[90vh] flex items-center">
    <!-- Retro-futuristic animated background -->
    <div class="absolute inset-0" style="background: var(--gradient-hero);"></div>
    <div class="absolute inset-0 bg-grid-pattern"></div>
    <div class="absolute inset-0 opacity-25">
      <div class="absolute top-20 left-20 w-80 h-80 rounded-full mix-blend-screen filter blur-3xl animate-blob glow-teal"
        style="background: rgba(0, 212, 170, 0.4);"></div>
      <div
        class="absolute top-40 right-20 w-96 h-96 rounded-full mix-blend-screen filter blur-3xl animate-blob animation-delay-2000 glow-coral"
        style="background: rgba(255, 107, 91, 0.35);"></div>
      <div
        class="absolute -bottom-8 left-1/2 transform -translate-x-1/2 w-[600px] h-[600px] rounded-full mix-blend-screen filter blur-3xl animate-blob animation-delay-4000 glow-indigo"
        style="background: rgba(99, 102, 241, 0.3);"></div>
    </div>

    <!-- Floating particles -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="particle absolute w-2 h-2 rounded-full animate-float"
        style="top: 20%; left: 10%; background: var(--accent-primary); animation-delay: 0s;"></div>
      <div class="particle absolute w-1 h-1 rounded-full animate-float"
        style="top: 60%; left: 80%; background: var(--accent-secondary); animation-delay: 2s;"></div>
      <div class="particle absolute w-3 h-3 rounded-full animate-float"
        style="top: 80%; left: 20%; background: var(--accent-tertiary); animation-delay: 4s;"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 flex flex-col gap-8 z-10">
      <h1 class="hero-title text-4xl sm:text-5xl md:text-6xl lg:text-7xl">
        <span id="typed-text">Crafting Digital Experiences That Matter</span>
        <span class="inline-block w-0.5 h-8 sm:h-10 md:h-12 lg:h-14 animate-pulse ml-1"
          style="background: #00d4aa; box-shadow: 0 0 20px #00d4aa;"></span>
      </h1>
      <p class="max-w-prose text-lg sm:text-xl md:text-2xl text-slate-300 leading-relaxed animate-fade-in-up animation-delay-500">
        Full-stack developer passionate about creating meaningful web applications. From interactive music platforms
        to comprehensive tourism portals, I transform ideas into scalable, user-centric solutions using modern
        technologies and thoughtful design.
      </p>
      <div class="flex flex-wrap gap-4 pt-6 animate-fade-in-up animation-delay-1000">
        <a class="btn btn-primary group" href="/projects">
          Explore My Work
          <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor"
            viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a class="btn" href="/about">Learn My Story</a>
        <a class="btn btn-outline" href="/contact">
          Let's Connect
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <section class="section py-16 sm:py-20 lg:py-24" aria-labelledby="recent-projects-title">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-12">
        <h2 id="recent-projects-title" class="text-3xl sm:text-4xl font-bold tracking-tight mb-4 text-off-white">
          Selected Projects</h2>
        <p class="text-lg text-brand-200 max-w-3xl">Explore my featured work showcasing full-stack applications,
          interactive experiences, and creative solutions.</p>
      </div>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        {featuredProjects.map((project) => (
          <article class="card group" data-category={project.category}>
            <div class="relative mb-4 overflow-hidden rounded-lg bg-gradient-to-br from-brand-800 to-brand-900 p-1">
              <img src={project.image} alt={project.name}
                class="w-full h-48 object-cover rounded-md transition-transform duration-300 group-hover:scale-105 lazy"
                loading="lazy" />
            </div>
            <div class="flex items-start justify-between gap-2 mb-2">
              <h3 class="flex-1 flex items-center flex-wrap">
                <span class="text-brand-100 font-semibold text-lg">{project.name}</span>
                {project.featured && (
                  <span
                    class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-accent-500/20 text-accent-300 border border-accent-400/30 ml-2 animate-pulse">
                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path
                        d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                    Featured
                  </span>
                )}
              </h3>
            </div>
            <p class="text-slate-300 text-sm leading-relaxed mb-4">{project.description}</p>
            <div class="flex flex-wrap gap-2 mt-auto">
              {project.tags.map((tag) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          </article>
        ))}
      </div>
      <div class="mt-10 flex justify-center">
        <a class="btn btn-primary group" href="/projects">
          See All Projects
          <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor"
            viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <section class="section-alt section" aria-labelledby="skills-title">
    <div class="max-w-7xl mx-auto px-4">
      <h2 id="skills-title" class="text-3xl sm:text-4xl font-bold tracking-tight mb-12 text-gradient-teal text-center">Technical
        Expertise</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Programming Languages -->
        <div class="card">
          <h3 class="text-xl font-semibold text-teal-400 mb-4">Programming Languages</h3>
          <div class="space-y-3">
            <div class="skill-item group">
              <span class="skill-level skill-expert">Java</span>
              <div class="skill-bar">
                <div class="skill-fill skill-expert-fill"></div>
              </div>
            </div>
            <div class="skill-item group">
              <span class="skill-level skill-advanced">PHP</span>
              <div class="skill-bar">
                <div class="skill-fill skill-advanced-fill"></div>
              </div>
            </div>
            <div class="skill-item group">
              <span class="skill-level skill-advanced">JavaScript</span>
              <div class="skill-bar">
                <div class="skill-fill skill-advanced-fill"></div>
              </div>
            </div>
            <div class="skill-item group">
              <span class="skill-level skill-intermediate">Python</span>
              <div class="skill-bar">
                <div class="skill-fill skill-intermediate-fill"></div>
              </div>
            </div>
            <div class="skill-item group">
              <span class="skill-level skill-intermediate">C#</span>
              <div class="skill-bar">
                <div class="skill-fill skill-intermediate-fill"></div>
              </div>
            </div>
          </div>
        </div>

        <!-- Frontend -->
        <div class="card">
          <h3 class="text-xl font-semibold text-indigo-400 mb-4">Frontend</h3>
          <div class="space-y-3">
            <div class="skill-item group">
              <span class="skill-level skill-expert">HTML5</span>
              <div class="skill-bar">
                <div class="skill-fill skill-expert-fill"></div>
              </div>
            </div>
            <div class="skill-item group">
              <span class="skill-level skill-expert">CSS3</span>
              <div class="skill-bar">
                <div class="skill-fill skill-expert-fill"></div>
              </div>
            </div>
            <div class="skill-item group">
              <span class="skill-level skill-advanced">Tailwind CSS</span>
              <div class="skill-bar">
                <div class="skill-fill skill-advanced-fill"></div>
              </div>
            </div>
            <div class="skill-item group">
              <span class="skill-level skill-advanced">Responsive Design</span>
              <div class="skill-bar">
                <div class="skill-fill skill-advanced-fill"></div>
              </div>
            </div>
            <div class="skill-item group">
              <span class="skill-level skill-intermediate">React</span>
              <div class="skill-bar">
                <div class="skill-fill skill-intermediate-fill"></div>
              </div>
            </div>
          </div>
        </div>

        <!-- Backend -->
        <div class="card">
          <h3 class="text-xl font-semibold text-coral-400 mb-4">Backend</h3>
          <div class="space-y-3">
            <div class="skill-item group">
              <span class="skill-level skill-advanced">Node.js</span>
              <div class="skill-bar">
                <div class="skill-fill skill-advanced-fill"></div>
              </div>
            </div>
            <div class="skill-item group">
              <span class="skill-level skill-advanced">MySQL</span>
              <div class="skill-bar">
                <div class="skill-fill skill-advanced-fill"></div>
              </div>
            </div>
            <div class="skill-item group">
              <span class="skill-level skill-advanced">RESTful APIs</span>
              <div class="skill-bar">
                <div class="skill-fill skill-advanced-fill"></div>
              </div>
            </div>
            <div class="skill-item group">
              <span class="skill-level skill-intermediate">MongoDB</span>
              <div class="skill-bar">
                <div class="skill-fill skill-intermediate-fill"></div>
              </div>
            </div>
            <div class="skill-item group">
              <span class="skill-level skill-intermediate">GraphQL</span>
              <div class="skill-bar">
                <div class="skill-fill skill-intermediate-fill"></div>
              </div>
            </div>
          </div>
        </div>

        <!-- Tools & Platforms -->
        <div class="card">
          <h3 class="text-xl font-semibold text-teal-400 mb-4">Tools & Platforms</h3>
          <div class="space-y-3">
            <div class="skill-item group">
              <span class="skill-level skill-expert">Git</span>
              <div class="skill-bar">
                <div class="skill-fill skill-expert-fill"></div>
              </div>
            </div>
            <div class="skill-item group">
              <span class="skill-level skill-advanced">GitHub</span>
              <div class="skill-bar">
                <div class="skill-fill skill-advanced-fill"></div>
              </div>
            </div>
            <div class="skill-item group">
              <span class="skill-level skill-advanced">VS Code</span>
              <div class="skill-bar">
                <div class="skill-fill skill-advanced-fill"></div>
              </div>
            </div>
            <div class="skill-item group">
              <span class="skill-level skill-intermediate">Docker</span>
              <div class="skill-bar">
                <div class="skill-fill skill-intermediate-fill"></div>
              </div>
            </div>
            <div class="skill-item group">
              <span class="skill-level skill-intermediate">Cloud Services</span>
              <div class="skill-bar">
                <div class="skill-fill skill-intermediate-fill"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
