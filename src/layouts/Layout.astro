---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  currentPage?: string;
  canonical?: string;
  image?: string;
}
const { title, description, currentPage = "", canonical, image } = Astro.props;
const metaDescription =
  description ||
  "Portfolio of Fingerless Coder - Multimedia Computing student exploring the space between code and design";
const siteUrl = "https://fingerlesscoder.github.io";
const normalizedCurrentPage = currentPage.endsWith("/") || currentPage === "" ? currentPage : `${currentPage}/`;
const pageUrl = canonical ?? `${siteUrl}${normalizedCurrentPage || "/"}`;
const socialImage = image ?? `${siteUrl}/wallpaper.jpg`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={metaDescription} />
    <meta
      name="keywords"
      content="multimedia computing, web developer, frontend, accessibility"
    />
    {canonical ? <link rel="canonical" href={canonical} /> : <link rel="canonical" href={`${siteUrl}${normalizedCurrentPage || '/'}`} />}
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Fingerless Coder" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:url" content={pageUrl} />
    <meta property="og:image" content={socialImage} />
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@WTay04" />
    <meta name="twitter:creator" content="@WTay04" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={metaDescription} />
    <meta name="twitter:image" content={socialImage} />

    <meta name="author" content="Wilson Tay (Fingerless Coder)" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg?v=2" />
    <link rel="alternate icon" type="image/png" href="/profile.png?v=1" sizes="32x32" />
    <link rel="shortcut icon" href="/profile.png?v=1" />
    <link rel="apple-touch-icon" href="/profile.png?v=1" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&family=Syne:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <!-- Google tag (gtag.js) loaded after page becomes interactive -->
    <script>
      window.addEventListener("load", () => {
        const gaScript = document.createElement("script");
        gaScript.async = true;
        gaScript.src = "https://www.googletagmanager.com/gtag/js?id=G-YJL1BQCHYY";
        document.head.appendChild(gaScript);

        const gaInitScript = document.createElement("script");
        gaInitScript.src = "/ga-init.js";
        gaInitScript.defer = true;
        document.head.appendChild(gaInitScript);
      });
    </script>
    <!-- JSON-LD Structured Data: Person / Website -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Wilson Tay",
      "alternateName": "Fingerless Coder",
      "url": siteUrl,
      "sameAs": [
        "https://github.com/FingerlessCoder",
        "https://www.linkedin.com/in/wilson-tay-225019301/",
        "https://x.com/WTay04",
        "https://facebook.com/wilson.tay.912247",
        "https://instagram.com/wilson_tay04",
      ]
    })} />
  </head>

  <body class="min-h-dvh flex flex-col selection:bg-accent-200/60">
    <a
      class="absolute left-[-999px] focus:left-4 focus:top-4 focus:bg-accent-600 focus:text-white focus:px-4 focus:py-2 rounded-md"
      href="#main">Skip to content</a
    >

    <Header currentPage={currentPage} />

    <main id="main" class="flex-1">
      <slot />
    </main>

    <Footer />

    <!-- Easter egg modal -->
    <div
      id="easter-egg-modal"
      class="fixed inset-0 bg-black/90 z-50 hidden items-center justify-center"
    >
      <div class="text-center p-8 max-w-md">
        <p id="easter-egg-text" class="text-xl text-accent-300 font-mono mb-4">
        </p>
        <button
          id="close-easter-egg"
          class="text-brand-300 hover:text-white transition-colors text-sm"
        >
          Press any key to close
        </button>
      </div>
    </div>

    <script>
      // Theme toggle logic
      const themeKey = "site-theme-v1";
      const html = document.documentElement;

      function setTheme(theme: "light" | "dark") {
        html.setAttribute("data-theme", theme);
        localStorage.setItem(themeKey, theme);
      }

      function getPreferredTheme(): "light" | "dark" {
        const stored = localStorage.getItem(themeKey);
        if (stored === "light" || stored === "dark") {
          return stored;
        }
        return window.matchMedia("(prefers-color-scheme: dark)").matches
          ? "dark"
          : "light";
      }

      function toggleTheme() {
        const current = html.getAttribute("data-theme") as "light" | "dark";
        const newTheme = current === "light" ? "dark" : "light";
        setTheme(newTheme);
        updateThemeToggleIcon(newTheme);
      }

      function updateThemeToggleIcon(theme: "light" | "dark") {
        const toggleBtn = document.getElementById("theme-toggle-btn");
        if (toggleBtn) {
          if (theme === "light") {
            toggleBtn.innerHTML =
              '<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><circle cx="12" cy="12" r="5"/><path d="M12 1v2m0 18v2M4.22 4.22l1.42 1.42m12.72 12.72l1.42 1.42M1 12h2m18 0h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/></svg>';
          } else {
            toggleBtn.innerHTML =
              '<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/></svg>';
          }
        }
      }

      // Easter egg: Merry Christmas Mr. Lawrence
      const easterEggModal = document.getElementById("easter-egg-modal");
      const easterEggText = document.getElementById("easter-egg-text");
      const closeEasterEggBtn = document.getElementById("close-easter-egg");
      let inputBuffer = "";

      const christmasMessages = [
        "Merry Christmas, Mr. Lawrence",
        "戦場のメリークリスマス",
        "Ryuichi Sakamoto, 1983",
      ];

      function showChristmasEasterEgg() {
        if (easterEggModal && easterEggText) {
          const randomMessage =
            christmasMessages[
              Math.floor(Math.random() * christmasMessages.length)
            ];
          easterEggText.textContent = randomMessage;
          easterEggModal.classList.remove("hidden");
          easterEggModal.classList.add("flex");
        }
      }

      function hideEasterEgg() {
        if (easterEggModal) {
          easterEggModal.classList.add("hidden");
          easterEggModal.classList.remove("flex");
        }
      }

      // Initialize theme
      document.addEventListener("DOMContentLoaded", () => {
        const theme = getPreferredTheme();
        setTheme(theme);
        updateThemeToggleIcon(theme);

        const themeToggleBtn = document.getElementById("theme-toggle-btn");
        if (themeToggleBtn) {
          themeToggleBtn.addEventListener("click", toggleTheme);
        }

        if (closeEasterEggBtn) {
          closeEasterEggBtn.addEventListener("click", hideEasterEgg);
        }

        if (easterEggModal) {
          easterEggModal.addEventListener("click", hideEasterEgg);
        }
      });

      // Easter egg keyboard input
      document.addEventListener("keydown", (e) => {
        const key = e.key.toLowerCase();
        if (key.length === 1 && /[a-z]/.test(key)) {
          inputBuffer += key;
          inputBuffer = inputBuffer.slice(-20); // Keep last 20 chars

          if (
            inputBuffer.includes("merry") ||
            inputBuffer.includes("christmas") ||
            inputBuffer.includes("sakamoto")
          ) {
            showChristmasEasterEgg();
            inputBuffer = "";
          }
        } else if (
          easterEggModal &&
          !easterEggModal.classList.contains("hidden")
        ) {
          hideEasterEgg();
        }
      });
    </script>
  </body>
</html>
